/**index.wxss**/
page {
	display: flex;
	flex-direction: column;
	background-color: #F2F2F2;
}

.scrollarea {
	flex: 1;
	overflow: hidden;
}

.scrollarea::-webkit-scrollbar {
	display: none;
}

.topuserinfo {
	height: 70px;
	background-color: #FFFFFF;
	margin: 8px;
	border-radius: 4px;
	overflow: hidden;
	display: flex;
	justify-content: space-between;
}

.usericonbox {
	overflow: hidden;
	height: 70px;
	width: 70px;
	display: flex;
	align-items: center;
	justify-content: center;
}

.usericon {
	width: 50px;
	height: 50px;
	border: solid 2px #F2F2F2;
	border-radius: 4px;
}

.userinfobox {
	flex: 1;
	height: 54px;
	margin: 8px 5px;
	color: #333333;
	display: flex;
	flex-direction: column;
}

.usernamebox {
	font-size: 16px;
	font-weight: 600;
	height: 30px;
	display: flex;
	align-items: center;
}

.userlevelbox {
	color: #1b3570;
	font-size: 15px;
	margin-top: auto;
}

.useraboutbox {
	height: 70px;
	width: 70px;
}

.userdiaryinfo {
	height: 300px;
	background-color: #FFFFFF;
	margin: 8px;
	border-radius: 4px;
}

.userdiarytitle {
	height: 24px;
	padding: 6px 10px;
	display: flex;
	align-items: center;
	font-size: 15px;
	display: flex;
	justify-content: space-between;
}

.gotodiary {
	width: 16px;
	height: 16px;
}

.userdiaryline {
	height: 1px;
	background-color: #F2F2F2;
}

.userdiaryinfobox {
	height: 263px;
	display: flex;
}

.userwatchinfo {
	height: 300px;
	background-color: #FFFFFF;
	margin: 8px;
	border-radius: 4px;
}

.userwatchtitle {
	height: 24px;
	padding: 6px 10px;
	display: flex;
	align-items: center;
	font-size: 15px;
	display: flex;
	justify-content: space-between;
}

.userwatchline {
	height: 1px;
	background-color: #F2F2F2;
}

.userwatchinfobox {
	height: 263px;
	display: flex;
}

.gotowatch {
	width: 16px;
	height: 16px;
}

.hasnoinfo {
	margin: auto;
	width: fit-content;
	color: #666666;
	font-size: 15px;
}