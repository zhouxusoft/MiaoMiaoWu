page {
	height: 100vh;
	display: flex;
	flex-direction: column;
}

.scrollarea {
	flex: 1;
	height: 120vh;
	overflow-y: hidden;
}

.userinfo {
	height: 106px;
	margin: 8px;
	border-radius: 4px;
	overflow: hidden;
	display: flex;
	position: relative;
}

.userbackgroundimage1 {
	width: 100%;
	position: absolute;
	top: 0;
	z-index: -1;
}

.userbackgroundimage2 {
	width: 100%;
	position: absolute;
	top: 0;
	z-index: -1;
}

.userinfobox {
	box-sizing: border-box;
	width: 100%;
	height: 106px;
	position: absolute;
	z-index: 999;
	display: flex;
	justify-content: space-between;
	padding: 16px;
}

.useravatarbox {
	width: fit-content;
	width: 74px;
	height: 74px;
	overflow: hidden;
	border: solid 2px #F2F2F2;
	border-radius: 6px;
	padding: 0;
}

.useravatar {
	width: 70px;
}

.userinfoborder {
	flex: 1;
	padding: 0 10px;
	display: flex;
	flex-direction: column;
}

.username {
	color: #FFFFFF;
	font-size: 18px;
	flex: 1;
}

.userlevel {
	color: #EEEEEE;
	font-size: 14px;
	margin: 2px 0;
}

.userscore {
	color: #EEEEEE;
	font-size: 14px;
}

.usernameinput {
	border: 2px solid #F2F2F2;
	padding: 8px;
	margin: 8px 0 0;
}