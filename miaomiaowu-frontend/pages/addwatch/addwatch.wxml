<!--pages/addwatch/addwatch.wxml-->
<view class="borderbox">
	<t-steps layout="vertical" readonly>
		<t-step-item title="输入番剧名称" status="process" id="inputname">
			<view slot="content">
				<t-input prefixIcon="component-breadcrumb" confirm-type="done" bind:blur="finishNameInput" value="{{nameinput}}"></t-input>
			</view>
		</t-step-item>
		<t-step-item title="选择番剧封面" status="process" id="inputimg">
			<view slot="content">
				<view class="wrapper">
					<t-upload mediaType="{{['image']}}" max="{{1}}" files="{{fileList}}" bind:add="handleAdd" bind:remove="handleRemove">
					</t-upload>
				</view>
				<view class="btngroup">
					<t-button theme="light" size="small">使用默认</t-button>
					<t-button theme="light" size="small">网络获取</t-button>
					<t-button theme="light" size="small">AI 生成</t-button>
				</view>
			</view>
		</t-step-item>
		<t-step-item title="完善番剧信息" status="process">
			<view slot="content">
				<view class="textarea-example">
					<text class="textarea-example__label">番剧简介</text>
					<t-textarea t-class="external-class" placeholder="请输入简介" bordered autosize="true" maxlength="100" disableDefaultPadding="{{true}}" indicator style="{{style}}" />
				</view>
				<view class="btngroup">
					<t-button theme="light" size="small">网络获取</t-button>
					<t-button theme="light" size="small">AI 生成</t-button>
				</view>
				<view class="textarea-example">
					<text class="textarea-example__label">制作公司</text>
					<t-textarea t-class="external-class" placeholder="请输入公司名称" bordered disableDefaultPadding="{{true}}" indicator style="{{madenamestyle}}" />
				</view>
			</view>
		</t-step-item>
		<t-step-item title="完善更新信息" status="process">
			<view slot="content">
				<t-tabs defaultValue="{{0}}" bind:change="onTabsChange" bind:click="onTabsClick" t-class="custom-tabs" t-class-content="custom-panel">
					<t-tab-panel label="已完结" value="0">
						<view class="updatebox">
							<view style="display: flex; align-items: center;">
								<text style="margin: 16rpx;">总集数</text>
								<t-stepper defaultValue="0" max="9999" size="medium" theme="outline" />
							</view>
						</view>
					</t-tab-panel>
					<t-tab-panel label="连载中" value="1" style="{{tabPanelstyle}}">
						<view class="updatebox">
							<view style="display: flex; align-items: center;">
								<text style="margin: 16rpx;">更新至</text>
								<t-stepper defaultValue="0" max="9999" size="medium" theme="outline" />
							</view>
							
						</view>
					</t-tab-panel>
					<t-tab-panel label="未更新" value="2" style="{{tabPanelstyle}}">选项三内容</t-tab-panel>
				</t-tabs>
			</view>
		</t-step-item>
		<t-step-item title="喜爱度" status="process">
		</t-step-item>
	</t-steps>
</view>