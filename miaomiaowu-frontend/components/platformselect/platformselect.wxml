<!--components/platformselect/platformselect.wxml-->
<view class="platformbox">
	<t-check-tag class="margin-16" size="large" variant="outline" content="腾讯视频" data-index="0" bind:change="selectPlatform" checked="{{checked[0]}}">
		<view class="watchiconbox" slot="icon">
			<image src="/images/tencentvideo.png" mode="" class="watchicon" />
		</view>
	</t-check-tag>
	<t-check-tag class="margin-16" size="large" variant="outline" content="哔哩哔哩" data-index="1" bind:change="selectPlatform" checked="{{checked[1]}}">
		<view class="watchiconbox" slot="icon">
			<image src="/images/bilibili.png" mode="" class="watchicon" />
		</view>
	</t-check-tag>
	<t-check-tag class="margin-16" size="large" variant="outline" content="爱奇艺" data-index="2" bind:change="selectPlatform" checked="{{checked[2]}}">
		<view class="watchiconbox" slot="icon">
			<image src="/images/aiqiyi.png" mode="" class="watchicon" />
		</view>
	</t-check-tag>
	<t-check-tag class="margin-16" size="large" variant="outline" content="优酷视频" data-index="3" bind:change="selectPlatform" checked="{{checked[3]}}">
		<view class="watchiconbox" slot="icon">
			<image src="/images/youku.png" mode="" class="watchicon" />
		</view>
	</t-check-tag>
	<t-check-tag class="margin-16" size="large" variant="outline" content="其它" data-index="4" bind:change="selectPlatform" checked="{{checked[4]}}">
		<view class="watchiconbox" slot="icon">
			<image src="/images/otherwatch.png" mode="" class="watchicon" />
		</view>
	</t-check-tag>
</view>